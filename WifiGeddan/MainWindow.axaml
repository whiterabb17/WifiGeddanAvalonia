<Window
	x:Class="WifiGeddan.MainWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:WifiGeddan.ViewModels"
	x:DataType="vm:MainWindowViewModel"
	d:DesignHeight="760"
	d:DesignWidth="800"
	Background="WhiteSmoke"
	Icon="/Assets/winux.ico"
	mc:Ignorable="d">
	<!--
		Title="WINUX [CMF] SYSTEM"
	-->
	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Window.Styles>
		<Style Selector="TextBlock.h1">
			<Setter Property="FontSize" Value="24" />
			<Setter Property="FontWeight" Value="Bold" />
			<Setter Property="FontStyle" Value="Oblique" />
			<Setter Property="Background" Value="Black" />
			<Setter Property="Foreground" Value="Red" />
		</Style>
	</Window.Styles>

	<Grid
		Margin="4"
		Background="Black"
		ColumnDefinitions="80,70,80,100,80,210,50,120"
		RowDefinitions="30,30,40,30,30,30,15,30,30,30,30,347,30,30">
		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="11"
			Classes="h1" />
		<TextBlock
			Grid.Row="0"
			Grid.Column="4"
			Grid.ColumnSpan="3"
			Classes="h1">
			WifiGeddan
		</TextBlock>


		<!--
		<Image
			Grid.Row="1"
			Grid.RowSpan="3"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Source="avares://WifiGeddan/Assets/winux.png"
			StretchDirection="UpOnly" />
		AsyncTask Binding Example
		<TextBlock Text="{Binding MyAsyncText^, FallbackValue='Wait a second'}" />
		
		-->
		<Grid.ContextMenu>
			<ContextMenu>
				<MenuItem x:Name="LogCtxItem" Header="Clear Logs" Command="{Binding ClearLogList, DataType={x:Type vm:MainWindowViewModel}}" />
				<MenuItem Header="--------------------" />
				<MenuItem x:Name="LocalServerCtxItem" Header="Start Server" />
				<MenuItem x:Name="ManageServerCtxItem" Header="Connect To Server" />
				<MenuItem x:Name="ShutdownCtxItem" Header="Shutdown" />
			</ContextMenu>
		</Grid.ContextMenu>
		<!--  Scan Result Data Grid  -->
		<DataGrid
			x:Name="InterfaceGrid"
			Grid.Row="1"
			Grid.RowSpan="2"
			Grid.Column="0"
			Grid.ColumnSpan="8"
			Width="780"
			Height="50"
			Padding="0,0,10,0"
			VerticalAlignment="Top"
			AutoGenerateColumns="True"
			Background="Gray"
			ColumnWidth="1*"
			Foreground="Black"
			HorizontalGridLinesBrush="Black"
			ItemsSource="{Binding InterfaceList, DataType={x:Type vm:MainWindowViewModel}}"
			SelectionMode="Single" />

		<DataGrid
			x:Name="LogGrid"
			Grid.Row="4"
			Grid.RowSpan="2"
			Grid.Column="0"
			Grid.ColumnSpan="8"
			Width="780"
			Height="152"
			Padding="5,0,50,0"
			AutoGenerateColumns="True"
			Background="Gray"
			Foreground="Black"
			HorizontalGridLinesBrush="Black"
			ItemsSource="{Binding LogList, DataType={x:Type vm:MainWindowViewModel}}" />

		<!-- Attack Result Data Grid
		
		-->
		<StackPanel
			Grid.Row="8"
			Grid.Column="0"
			Background="Gray"
			Grid.ColumnSpan="8">
			<DataGrid
				x:Name="RouterTable"
				Grid.Row="4"
				Grid.RowSpan="2"
				Grid.Column="0"
				Grid.ColumnSpan="8"
				Width="780"
				Height="200"
				Padding="5,0,50,0"
				AutoGenerateColumns="True"
				Background="Gray"
				Foreground="Black"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				HorizontalGridLinesBrush="Black"
				ItemsSource="{Binding RouterTableList, DataType={x:Type vm:MainWindowViewModel}}" />
			<DataGrid
				x:Name="DeviceTable"
				Grid.Row="4"
				Grid.RowSpan="2"
				Grid.Column="0"
				Grid.ColumnSpan="8"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				Width="780"
				Height="235"
				Padding="50,0,10,0"
				AutoGenerateColumns="True"
				Background="Gray"
				Foreground="Black"
				HorizontalGridLinesBrush="Black"
				ItemsSource="{Binding DeviceTableList, DataType={x:Type vm:MainWindowViewModel}}" />
			<TextBox
				x:Name="SelectedInterface"
				Grid.Row="5"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Width="145"
				HorizontalAlignment="Left"
				IsReadOnly="false"
				IsVisible="False" />
		</StackPanel>

		<StackPanel Grid.Row="12" Grid.Column="0"  Background="Gray">
			<Button
				Grid.Column="2"
				Width="145"
				Foreground="Black"
				Height="30"
				Background="Gainsboro"
				Command="{Binding EnableMonMode, DataType={x:Type vm:MainWindowViewModel}}"
				Content="Enable Mon Mode" />
			<Button
				Width="145"
				Background="Gainsboro"
				Foreground="Black"
				Height="30"
				Command="{Binding DisableMonMode, DataType={x:Type vm:MainWindowViewModel}}"
				Content="Disable Mon Mode" />
		</StackPanel>
		<StackPanel Grid.Row="12" Grid.Column="2" Background="Gray">
			<Button
				Width="145"
				Background="Gainsboro"
				Foreground="Black"
				Height="30"
				Command="{Binding EnableInterface, DataType={x:Type vm:MainWindowViewModel}}"
				Content=" Enable Interface" />
			<Button
				Width="145"
				Background="Gainsboro"
				Foreground="Black"
				Height="30"
				Command="{Binding DisableInterface, DataType={x:Type vm:MainWindowViewModel}}"
				Content=" Disable Interface" />
		</StackPanel>
		<Label
			Grid.Row="12"
			Grid.Column="4"
			Padding="6"
			Content="Interface:" />
		<Label
			Grid.Row="13"
			Grid.Column="4"
			Height="30"
			Padding="6"
			Content="Mode:" />
		<Label
			x:Name="IfaceMode"
			Grid.Row="13"
			Grid.Column="5"
			Height="30"
			Padding="6" />
		<ComboBox
			x:Name="Interfaces"
			Grid.Row="12"
			Foreground="Black"
			Background="Gainsboro"
			Grid.Column="5"
			Width="255"
			Height="30"
			ItemsSource="{Binding AvailableInterfaces, DataType={x:Type vm:MainWindowViewModel}}"
			SelectedIndex="0" />
		<Button
			x:Name="SendBtn"
			Grid.Row="12"
			Grid.Column="7"
			Width="120"			
			Foreground="Black"
			Background="Gainsboro"
			Height="30"
			Command="{Binding GetIFaceMode, DataType={x:Type vm:MainWindowViewModel}}"
			Content="Select"
			HorizontalAlignment="Center" />
		<Button
			Foreground="Black"
			Grid.Row="13"
			Background="Gainsboro"
			Grid.Column="7"
			Width="120"
			x:Name="AiroButton"
			Height="30"
			Command="{Binding StartAiroDumpScan, DataType={x:Type vm:MainWindowViewModel}}"
			Content="Start Airodump"
			HorizontalAlignment="Center" />
	</Grid>
</Window>
